{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "./",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": [ "dom", "esnext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "newLine": "lf",
    "noEmit": true,
    "noImplicitAny": true,
    "paths": {
      "src/*": [ "src/*" ]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": [
      "../node_modules/@types",
      "./src/typings"
    ],
    "types": ["node"]
  },
  "include": [
    "../**/*"
  ],
  "exclude": [
    "../node_modules",
    "./dist",
    "./docs",
    "./coverage",
    "./devops"
  ]
}
