{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "../",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": false,
    "importHelpers": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "lib": [ "DOM", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "paths": {
      "src/*": [ "./src/*" ],
      "scripts/*": [ "./scripts/*" ],
      "blablo": ["./scripts/blablo.ts"],
      "package.json": ["./package.json"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "types": ["node"]
  },
  "include": [
    "../src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./configs",
    "./dist",
    "./docs",
    "./coverage",
    "./devops"
  ]
}
