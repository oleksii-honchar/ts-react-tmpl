{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "./",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": [ "DOM", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020","ES2021","ES2022","esnext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "newLine": "lf",
    "noEmit": true,
    "noImplicitAny": true,
    "paths": {
      "src/*": [ "src/*" ]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "esnext",
    "types": ["node"]
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./docs",
    "./coverage",
    "./devops"
  ]
}
