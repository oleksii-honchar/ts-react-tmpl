{
  "extends": "./configs/tsconfig.base.json",
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  },
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "lib": [ "DOM", "esnext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "src/*": [ "./src/*" ],
      "scripts/*": [ "./scripts/*" ],
      "blablo": ["./scripts/blablo.ts"],
      "package.json": ["./package.json"]
    },
    "target": "esnext",
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./docs",
    "./coverage",
    "./devops"
  ]
}
